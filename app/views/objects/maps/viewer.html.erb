<div id="sidebar">
  <div class="container-fluid">
    <div class="row">
      <div class="col-md-6">
        <form id="search-form">
          <div class="form-group">
            <input type="text" id="search-query" placeholder="სახელი" class="form-control">
          </div>

          <div class="form-group" id="search-type">
            <div class="checkbox">
              <label>
                <input type="checkbox" value="office">
                ოფისი
              </label>
            </div>
            <div class="checkbox">
              <label>
                <input type="checkbox" value="substation">
                ქვესადგური
              </label>
            </div>
            <div class="checkbox">
              <label>
                <input type="checkbox" value="tower">
                ანძა
              </label>
            </div>
            <div class="checkbox">
              <label>
                <input type="checkbox" value="line">
                ხაზი
              </label>
            </div>
            <div class="checkbox">
              <label>
                <input type="checkbox" value="pole">
                ბოძი
              </label>
            </div>
            <div class="checkbox">
              <label>
                <input type="checkbox" value="tp">
                ჯიხური
              </label>
            </div>
          </div>

          <div class="form-group">
            <select id="search-region" class="form-control">
              <option value="">რაიონი</option>
              <% @regions.each do |region| %>
              <option value="<%= region.id.to_s %>"><%= region.name.to_s %></option>
              <% end %>
            </select>
          </div>

          <div class="form-group">
            <button class="btn btn-primary">ძებნა</button>
          </div>
        </form>
      </div>
      <div id="search-output" class="col-md-6"></div>
    </div>
  </div>
</div>

<div id="mapwrapper">
  <div id="mapregion"></div>
  <div id="messages"><span>loading...</span></div>
</div>

<%= javascript_include_tag "client" %>

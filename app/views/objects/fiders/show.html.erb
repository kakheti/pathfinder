<%=view_for @fider, title: @title, icon: '/icons/line.png', collapsible: true do |f|
  f.text_field 'kmlid', tag: 'code'
  f.text_field 'name'
  f.text_field 'region.name', i18n: 'region', url: region_url(id:@fider.region.id)
  f.complex_field i18n: 'direction' do |c|
    c.text_field 'start', after: '&rarr;'.html_safe, tag: 'code'
    c.text_field 'end', tag: 'code'
  end
  f.text_field 'description'
  f.text_field 'points.count', i18n: 'points', tag: 'code'
  f.number_field 'length', after: 'კმ'
end%>
<%= render partial: '/layouts/paths', locals: {paths: [ @fider ], direction: false} %>
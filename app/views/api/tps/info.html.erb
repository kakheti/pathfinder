<h3>სატრ. ჯიხური #<%= @tp.name %></h3>
<table class="table">
  <tr>
    <td><strong>სიმძლავრე</strong></td>
    <td><code><%= @tp.power %></code> კვტ</td>
  </tr>
  <tr>
    <td><strong>მუნიციპალიტეტი</strong></td>
    <td><%= @tp.region %></td>
  </tr>
  <tr>
    <td><strong>მფლობელი</strong></td>
    <td><%= @tp.owner %></td>
  </tr>
  <tr>
    <td><strong>საყოფაცხოვრებო</strong></td>
    <td><code><%= number_with_precision @tp.residential_count, separator:'.', delimiter: ',', precision: 0 %></code> აბონენტი</td>
  </tr>
  <tr>
    <td><strong>არა საყოფაცხოვრებო</strong></td>
    <td><code><%= number_with_precision @tp.comercial_count, separator:'.', delimiter: ',', precision: 0 %></code> აბონენტი</td>
  </tr>
  <tr>
    <td><strong>საშ.მოხმარება</strong></td>
    <td><code><%= number_with_precision @tp.usage_average, separator:'.', delimiter: ',', precision: 2 %></code> კვტ.საათი</td>
  </tr>
  <tr>
    <td><strong>ფიდერი</strong></td>
    <td><%= @tp.fider %></td>
  </tr>
  <tr>
    <td><strong>კოორდინატები</strong></td>
    <td>
      E:<code><%= @tp.easting %></code>
      N:<code><%= @tp.northing %></code>
    </td>
  </tr>
  <tr>
    <td><strong>მისამართი</strong></td>
    <td><%= @tp.address %></td>
  </tr>
  <tr>
    <td><strong>შენიშვნა</strong></td>
    <td><%= @tp.description || '<span class="text-muted">(none)</span>'.html_safe %></td>
  </tr>
</table>

<img src="<%= @tp.picture %>" height="200" />